<div class="row justify-content-center">
  <div class=" w-50 p-3" style="background-color: #eee;">
  <form class="form-signup" action="/auth/signup/create" method="POST">
      <h1 class="h3 mb-3 font-weight-normal">Sign Up</h1>
    <div class="form-group">
      <label for="InputName">Name</label>
      <input type="text" class="form-control" id="InputName"  name="name" placeholder="Enter your name">
      <div>
            <p id='ErrorName' class="text-danger"></p>
      </div>
    </div>

    <div class="form-group">
      <label for="InputLastName">Last Name</label>
      <input type="text" class="form-control" id="InputLastName" name="lastname" placeholder="Enter your last name">
      <div>
            <p id='ErrorLastName' class="text-danger"></p>
      </div>
    </div>

    <div class="form-group">
      <label for="InputEmail">Email</label>
      <input type="email" class="form-control" id="InputEmail" name="email" placeholder="Enter email">
      <div>
            <p id='ErrorEmail' class="text-danger"></p>
      </div>
    </div>

    <div class="form-group">
      <label for="InputPassword">Password</label>
      <input type="password" class="form-control" id="InputPassword" name="password" placeholder="Password">
      <div>
            <p id='ErrorPassword' class="text-danger"></p>
      </div>
    </div>

    <div class="form-group">
      <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
        <p class="mt-5 mb-3 text-muted">&copy; Carlos Velez-2019 </p>
    </div>
  </form>
  </div>
</div>
<script>
  {{#each errors as |item|}}
        
        switch ('{{item.[0]}}') {
          case 'name':
            var p = document.getElementById('ErrorName');
            p.innerHTML = ('{{item.[1]}}');
          break;
          case 'lastname':
            var p = document.getElementById('ErrorLastName');
            p.innerHTML = ('{{item.[1]}}');
          break;
          case 'email':
            var p = document.getElementById('ErrorEmail');
            p.innerHTML = ('{{item.[1]}}');
          break;

          case 'password':
            var p = document.getElementById('ErrorPassword');
            p.innerHTML = ('{{item.[1]}}');
          break;
          default:
            //Declaraciones ejecutadas cuando ninguno de los valores coincide con el valor de la expresi√≥n
          break;
        }

  {{/each}}
  
  
</script>

